.backdrop_modal{
  z-index: 3;
  position: absolute;
  left: 0;
  top: 0;
  /* height: 100%; */
  min-height: 100lvh;
  width: 100%;

  display: flex;
  justify-content: center;
  align-items: end;
  overflow: hidden;

  backdrop-filter: blur(2px);

  /* background: #2233aa33; */
}

.content{
  width: clamp(50%, calc(37.5em + 4em), 90%);
  /* height: max(80vh); */
  max-height: 100lvh;
  overflow: auto;


  padding: 2em;
  box-sizing: border-box;
  /* color: white; */

  background: var(--cwhite60);
  backdrop-filter: blur(1px);
  /* background: green; */

}
button.modal_close_btn{
  border: none;
  background: none;
  height: calc(var(--gmodulem) * 1);
  padding: 0;
  position: absolute;
  top: var(--gmodulem) ;
  right: var(--gmodulem) ;
    color: var(--cgrey);
}

button.modal_close_btn:hover{
  cursor: pointer;
    color: var(--cblack);
}

